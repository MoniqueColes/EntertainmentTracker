@model IEnumerable<BooksAndMovies.Models.BookModels.BookListItem>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-image: repeating-linear-gradient();
        background-image: url('../../assets/books3.jpg');
    }
</style>

<div class="jumbotron">
    <h2>Books</h2>

    <p>
        @Html.ActionLink("Add New Book", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRecommended)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearPublished)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRead)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRecommended)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearPublished)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookID }) <br />
                    @Html.ActionLink("Details", "Details", new { id = item.BookID }) <br />
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookID })
                </td>
            </tr>
        }

    </table>
    </div>